@model Tuple<IEnumerable<Student>,IEnumerable<Image>>
@{
    ViewData["Title"] = "Index";
    string defaultImageSrc = "/image/profile.png";
    Image senderImage;
    string imageSrc = defaultImageSrc;
}

<div class="container">
<div class="row">
    <div class="col-lg-12 card-margin">
        <div class="card search-form">
            <div class="card-body p-0">
                    <form id="search-form" method="get" action="@Url.Action("Index", "Students")">
                    <div class="row">
                        <div class="col-12">
                            <div class="row no-gutters">
                                <div class="col-lg-8 col-md-6 col-sm-12 p-0">
                                        @Html.TextBox("search", ViewData["CurrentFilter"], new { @class = "form-control", placeholder = "Search...", id = "search" })
                                    </div>
                                <div class="col-lg-1 col-md-3 col-sm-12 p-0">
                                    <button type="submit" class="btn btn-base">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
        <div class="col-12">
            <div class="card card-margin">
                <div class="card-body">
                    <div class="row search-body">
                        <div class="col-lg-12">
                            <div class="search-result">
                                <div class="result-header">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="records">Total number of members :
                                                <b>
                                                    @Model.Item1.Count()
                                                </b>  result</div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="result-actions">
                                                <div class="result-sorting">
                                                    <span>Sort By:</span>
                                                    <select class="form-control border-0" id="exampleOption">
                                                        <option value="1">Relevance</option>
                                                        <option value="2">Names (A-Z)</option>
                                                        <option value="3">Names (Z-A)</option>
                                                    </select>
                                                </div>
                                                <div class="result-views">
                                                    <a asp-controller="Students" asp-action="New" class="btn btn-outline-info">Add New Student</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="result-body">
                                    <div class="table-responsive">
                                        <table class="table widget-26">
                                            <tbody>
                                                @foreach (var item in Model.Item1){
                                                <tr>
                                                    <td>
                                                        <div class="widget-26-job-emp-img">
                                                                @if (!string.IsNullOrEmpty(imageSrc))
                                                                {
                                                            
                                                                        senderImage = Model.Item2.FirstOrDefault(img => img.studentId == item.Id);
                                                                        imageSrc = senderImage != null ? senderImage.imageSrc : defaultImageSrc;

                                                                        <a asp-action="Details" asp-controller="Students" asp-route-Id="@item.Id">
                                                                            <img src="@imageSrc" alt="Company" />
                                                                        </a>
                                                                }
                                                                else
                                                                {
                                                                    <a asp-action="Details" asp-controller="Students" asp-route-Id="@item.Id">
                                                                        <img src="@imageSrc" alt="Company" />
                                                                    </a>
                                                                    <p>No image available</p>
                                                                }

                                                            
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="widget-26-job-title">
                                                                            <a asp-action="Details" asp-controller="Students" asp-route-Id="@item.Id" class="studentName">@item.FirstName @item.LastName</a>
                                                                <p class="m-0"><a href="#" class="employer-name studentName">@item.Profession</a> <span class="text-muted time">,<span id="firstmot"> @item.CreateDate.ToString("MMMM dd ,yyyy")</span></span></p>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="widget-26-job-info">
                                                                <p class="type m-0">@item.Address</p>
                                                            <p class="text-muted m-0">in <span class="location">@item.Country, @item.City</span></p>
                                                        </div>
                                                    </td>
                                                    <td>
                                                            <span></span>
                                                            <div class="widget-26-job-salary">@item.Email</div>
                                                    </td>
                                                    <td>
                                                        <div class="widget-26-job-category bg-soft-base">
                                                            <i class="indicator bg-base"></i>
                                                            <span>@item.Profession</span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="widget-26-job-starred">
                                                                <a asp-controller="Students" asp-action="Delete" asp-route-Id="@item.Id">
                                                                   <i class="fa-solid fa-user-xmark"></i>
                                                            </a>
                                                                    <a asp-controller="Students" asp-action="Edit" asp-route-Id="@item.Id">
                                                                          <i class="fa-sharp fa-solid fa-user-pen text-success px-2"></i>
                                                                </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function submitForm() {
        document.getElementById("search-form").submit();
    }

    // Optional: If you want to disable form submission on input change when the button is clicked
    document.getElementById("search-button").addEventListener("click", function (event) {
        event.preventDefault(); // Prevent form submission when button is clicked
    });


</script>


 
