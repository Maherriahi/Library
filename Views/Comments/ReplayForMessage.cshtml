@model MessageReplayViewModel


@{
    ViewData["Title"] = "ReplayForMessage";
}
@{
    string imageSrc = "/image/profile.png";
    if (Model.Image != null  && !string.IsNullOrEmpty(Model.Image.imageSrc))
    {
        imageSrc = Model.Image.imageSrc; // Set image source if it's not null or empty
    }
}
<section style="background-color: #eee;">
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-start align-items-center">
                              @if (!string.IsNullOrEmpty(imageSrc))
                            {
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="@imageSrc" alt="avatar" width="60"
                                 height="60" />
                            }
                            else
                            {
                                <p>No image available</p>
                            }

                            <div>
                                <h6 class="fw-bold text-primary mb-1">@Model.Message.Full_name</h6>
                                <p class="text-muted small mb-0">
                                    Shared publicly - <span class="text-muted time">,<span id="firstmot">@Model.Message.dateTime.ToString("MMMM dd ,yyyy")</span></span>
                                </p>
                            </div>
                        </div>

                        <p class="mt-3 mb-4 pb-2">
                            @Model.Message.Description
                        </p>

                        <div class="small d-flex justify-content-start">
                            <a href="#!" class="d-flex align-items-center me-3">
                                <i class="far fa-thumbs-up me-2"></i>
                                <p class="mb-0">Like</p>
                            </a>
                            <a href="#!" class="d-flex align-items-center me-3">
                                <i class="far fa-comment-dots me-2"></i>
                                <p class="mb-0">Comment</p>
                            </a>
                            <a href="#!" class="d-flex align-items-center me-3">
                                <i class="fas fa-share me-2"></i>
                                <p class="mb-0">Share</p>
                            </a>
                        </div>
                    </div>
                    <form method="post" enctype="multipart/form-data">
                        <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                            <div class="d-flex flex-start w-100">
                                     @if (!string.IsNullOrEmpty(imageSrc))
                            {
                                <img class="rounded-circle shadow-1-strong me-3"
                                     src="@imageSrc" alt="avatar" width="40"
                                     height="40" />
                                }
                                else
                                {
                                    <p>No image available</p>
                                }
                                <div class="form-outline w-100">
                                    <input asp-for="Replay.messageId" value="@Model.Message.Id" type="hidden" />
                                    <input asp-for="Replay.StudentId" value="@Model.Message.StudentId" type="hidden" />
                                    <textarea class="form-control" id="textAreaExample" rows="4"
                                              style="background: #fff;" asp-for="Replay.Description">
                                    </textarea>
                                    <label class="form-label" for="textAreaExample">Message</label>
                                    <span asp-validation-for="Replay.Description" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="float-center mt-2 pt-4">
                                <button type="submit" class="btn btn-primary btn-sm">Post comment</button>
                                <button type="reset" class="btn btn-outline-primary btn-sm">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
