@model Book
@{
    ViewData["Title"] = "Details";
}
<div class="container body-d">
   
      <div class="card-body s-card w-100">
         <div class="card m-card col-8">
                  <h1 class="card-title">@Model.Title</h1>
                   <p class="card-text">@Model.Description</p>
                 <p><b> Author :</b> @Model.Author</p>
               <div class="btn-d">
               <a asp-action="Delete" asp-controller="Books" asp-route-Id="@Model.Id" class="btn-block btn btn-outline-info back"><i class="fa-solid fa-trash"></i> Delete</a>  
               <a asp-action="Edit" asp-controller="Books" asp-route-Id="@Model.Id" class="btn-block btn btn-info back"><i class="fa-solid fa-pen"></i> Update</a>  
               </div>
          </div>

        <div class="card card-img img-d col-4">
            <div class="img-g">
            <img src=@Model.imageSrc width="100%" height="100%" />
            </div>
        </div>

    </div>
    
</div>