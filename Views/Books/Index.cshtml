@model Tuple<IEnumerable<Book>, IEnumerable<Section>>
@{
    ViewData["Title"] = "Index";
}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="body_index_book">
<div class="container">
    <div class="bg-white rounded d-flex align-items-center justify-content-between" id="header"> <button
            class="btn btn-hide text-uppercase" type="button" data-toggle="collapse" data-target="#filterbar"
            aria-expanded="false" aria-controls="filterbar" id="filter-btn" onclick="changeBtnTxt()"> <span
                class="fas fa-angle-left" id="filter-angle"></span> <span id="btn-txt">Hide filters</span> </button>
        <nav class="navbar navbar-expand-lg navbar-light pl-lg-0 pl-auto"> <button class="navbar-toggler" type="button"
                data-toggle="collapse" data-target="#mynav" aria-controls="mynav" aria-expanded="false"
                aria-label="Toggle navigation" onclick="chnageIcon()" id="icon"> <span
                    class="navbar-toggler-icon"></span> </button>
            <div class="collapse navbar-collapse" id="mynav">
                <a asp-action="New" asp-controller="Books" class="btn btn-info ml-2 p-2" >Add New Book</a>
                <a asp-action="New" asp-controller="Sections"class="btn btn-warning ml-2 p-2 mr-2" >Add New Section</a>
            </div>
        </nav>
    </div>
    <div id="content" class="my-5">
        <div id="filterbar" class="collapse">
            <div class="box border-bottom">
                <div class="form-group text-center">
                    <div class="btn-group" data-toggle="buttons"> <label class="btn btn-success form-check-label">
                            <input class="form-check-input" type="radio"> Reset </label> <label
                            class="btn btn-success form-check-label active"> <input class="form-check-input"
                                type="radio" checked> Apply </label> </div>
                </div>
                </div>
          @foreach (var sectionItem in Model.Item2){ 
            <div class="box border-bottom">
                <div class="box-label text-uppercase d-flex align-items-center">@sectionItem.Name<button class="btn ml-auto"
                        type="button" data-toggle="collapse" data-target="#inner-box-@sectionItem.Id" aria-expanded="false"
                      aria-controls="inner-box" id="out" onclick="toggleSection('@sectionItem.Id')">
                                <span class="fas fa-plus"></span>
                    </button> </div>
                        
                       
                <div id="inner-box-@sectionItem.Id" class=" mt-2 mr-1">
                     @foreach (var book in Model.Item1.Where(b => b.SectionId == sectionItem.Id))
                        {
                    <div class="my-1"> <label class="tick">@book.Title <input type="checkbox"> <span
                                class="check"></span> </label> </div>
                         }
                </div>
                        
            </div>
           }
        </div>
        <div id="products">
            <div class="row mx-0">
                @foreach (var item in Model.Item1){
                <div class="col-lg-4 col-md-6 pt-md-4 ">
                    <div class="card Cardbox d-flex flex-column align-items-center">
                        <div class="product-name text-center">@item.Title</div>
                        <div class="card-img"> <img
                                src=@item.imageSrc
                                alt=""> </div>
                        <div class="card-body pt-5">
                            <div class="text-muted text-center mt-auto">@item.Author</div>
                            <div class="d-flex align-items-center justify-content-center colors my-2">
                            </div>
                            <div class="footer-card">
                            <div class="d-flex align-items-center justify-content-between ">
                                    <div class="font-weight-bold"><a asp-action="Details" asp-controller="Books" asp-route-Id="@item.Id">Details..</a></div>
                                <div class="d-flex gap-3">
                                  <a asp-action="Delete" asp-controller="Books" asp-route-Id="@item.Id"><i class="fa-solid fa-trash"></i></a>  
                                     <a asp-action="Edit" asp-controller="Books" asp-route-Id="@item.Id"><i class="fa-solid fa-pen"></i></a>   
                                   
                             </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>
</div>
<script>
   
    
  
</script>
