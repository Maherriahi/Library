@model Book
@{
    ViewData["Title"] = "Delete";
}
<div class="body-form">
    <div class="container-fluid px-1 py-1 mx-auto">
<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('https://images.pexels.com/photos/1887609/pexels-photo-1887609.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
        height: 300px;
        "></div>
    <!-- Background image -->

    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
        <div class="card-body py-5 px-md-5">

            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-5">Remove a book</h2>
                    <form class="form-card" method="post" enctype="multipart/form-data">
                        <input asp-for="Id" hidden />
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Title<span class="text-danger"> *</span></label> <input asp-for="Title" id="fname" disabled> </div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Author<span class="text-danger"> *</span></label> <input asp-for="Author" id="lname" disabled> </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Section<span class="text-danger"> *</span></label> <select asp-for="SectionId" asp-items="@ViewBag.BooksList" id="select" disabled></select> </div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Picture book<span class="text-danger"> *</span></label> <input asp-for="imagePath" type="file" id="mob" disabled> </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-12 flex-column d-flex"> <label class="form-control-label px-3">Description<span class="text-danger"> *</span></label> <input asp-for="Description" id="ans" disabled> </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="form-group col-sm-6  buttonForm "> <button type="submit" class="btn-block btn-primary">Delete Book</button> <a asp-action="Index" asp-controller="Books" class="btn-block btn-danger back">Go To Back</a></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
    </div>
</div>